<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/items_margin_bot_top"
    android:layout_marginLeft="@dimen/items_margin_right_left"
    android:layout_marginRight="@dimen/items_margin_right_left"
    android:layout_marginTop="@dimen/items_margin_bot_top"
    android:minHeight="@dimen/min_height_of_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_item_name"
        style="@style/ItemText"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@color/background_of_itemName"
        android:paddingStart="@dimen/items_name_paddingStart"
        android:textSize="@dimen/item_name_size"
        tools:text="Молоко" />

    <TextView
        android:id="@+id/id_item_price"
        style="@style/ItemText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/background_of_itemPrice"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/item_price_size"
        tools:text="3534" />

</LinearLayout>